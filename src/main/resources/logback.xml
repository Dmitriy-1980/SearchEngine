<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <appender name="pageParserAppenderFile" class="ch.qos.logback.core.FileAppender">
        <file>src/main/logs/pageParserLogger.log</file>
        <encoder>
            <pattern>%d{YY:MM:dd HH:mm:ss} %M # %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="allWarnErrorPageParser" class="ch.qos.logback.core.FileAppender">
        <file>src/main/logs/allWarErrorPageParser.log</file>
        <encoder>
            <pattern>%d{YY:MM:dd HH:mm:ss} %M # %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="indexingAppenderFile" class="ch.qos.logback.core.FileAppender">
        <file>src/main/logs/indexingLogger.log</file>
        <encoder>
            <pattern>%d{YY:MM:dd HH:mm:ss} %M # %msg %n</pattern>
        </encoder>
    </appender>

<!--loggers-->
    <logger name="pageParserLogger" level="error">
        <appender-ref ref="pageParserAppenderFile"/>
        <additivity>false</additivity>
    </logger>

    <logger name="allErrorPageParser" level="error">
        <appender-ref ref="allWarnErrorPageParser"/>
    </logger>

    <logger name="indexingLogger" level="info">
        <appender-ref ref="indexingAppenderFile"/>
        <additivity>false</additivity>
    </logger>
    <!--loggers-->
    <root>
        <!-- nothink -->
    </root>

</configuration>